<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lonelygamer.dmc.Profile"
    android:id="@+id/drawerLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/bgtile"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/txtProfUName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/ubuntur"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="32sp" />


        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_alignTop="@+id/txtProfUName">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnXboxOneGTag"
                    android:layout_width="107dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:text="XBOX ONE"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:fontFamily="@font/helveticaneue"
                    android:background="@drawable/rounded_frame_red" />

                <Button
                    android:id="@+id/btnPS4GTag"
                    android:layout_width="107dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:text="PS4"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:fontFamily="@font/helveticaneue"
                    android:background="@drawable/rounded_frame_red" />

                <Button
                    android:id="@+id/btnSteamGTag"
                    android:layout_width="107dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:text="STEAM"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:fontFamily="@font/helveticaneue"
                    android:background="@drawable/rounded_frame_red" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnEpicGamesGTag"
                    android:layout_width="107dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:text="EPIC GAMES"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:fontFamily="@font/helveticaneue"
                    android:background="@drawable/rounded_frame_red" />

                <Button
                    android:id="@+id/btnOriginGTag"
                    android:layout_width="107dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:text="ORIGIN"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:fontFamily="@font/helveticaneue"
                    android:background="@drawable/rounded_frame_red" />

                <Button
                    android:id="@+id/btnBNetGTag"
                    android:layout_width="107dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:text="BNET"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:fontFamily="@font/helveticaneue"
                    android:background="@drawable/rounded_frame_red" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnUbisoftGTag"
                    android:layout_width="107dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:text="UBISOFT"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:fontFamily="@font/helveticaneue"
                    android:background="@drawable/rounded_frame_red" />

                <Button
                    android:id="@+id/btnXbox360GTag"
                    android:layout_width="107dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:text="XBOX 360"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:fontFamily="@font/helveticaneue"
                    android:background="@drawable/rounded_frame_red" />

                <Button
                    android:id="@+id/btnPS3GTag"
                    android:layout_width="107dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:text="PS3"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:fontFamily="@font/helveticaneue"
                    android:background="@drawable/rounded_frame_red" />

            </TableRow>

        </TableLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_profile"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#444">

        <com.mindorks.placeholderview.PlaceHolderView
            android:id="@+id/drawerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </FrameLayout>


</android.support.v4.widget.DrawerLayout>
