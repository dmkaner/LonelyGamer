<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_frame5">

    <EditText
        android:id="@+id/gTagInput"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:backgroundTint="@android:color/darker_gray"
        android:textCursorDrawable="@null"
        android:layout_marginEnd="8dp"
        android:singleLine="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:gravity="left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gTagBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_frame_blue"
        android:text="ENTER"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/helveticaneue"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gTagInput" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gTagBtn" />

</android.support.constraint.ConstraintLayout>